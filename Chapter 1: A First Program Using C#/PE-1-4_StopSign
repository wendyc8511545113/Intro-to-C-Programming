/*
Write a program named StopSign that displays a pattern similar to a stop sign.
The number of spaces for each row in the image shown above are as follows:

3 spaces (all padding left)
9 spaces (1 padding left)
6 spaces
9 spaces (1 padding left)
3 spaces (all padding left)
6 spaces (all padding left)
6 spaces (all padding left)
6 spaces (all padding left)
*/

using System;
using static System.Console;
using System.Globalization;
class StopSign
{
	static void Main()
	{
		Console.WriteLine("   XXXXXX");
		Console.WriteLine(" X        X");
		Console.WriteLine("X   STOP   X");
		Console.WriteLine(" X        X");
		Console.WriteLine("   XXXXXX");
		Console.WriteLine("      X");
		Console.WriteLine("      X");
		Console.WriteLine("      X");
	}
}
