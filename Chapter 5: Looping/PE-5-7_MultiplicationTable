/*
Write an application named MultiplicationTable that prompts the user for an integer value, for example 7. 
Then display the product of every integer from 1 through 10 when multiplied by the entered value. 
For example, the first three lines of the table might read 1 x 7 = 7, 2 x 7 = 14, and 3 x 7 = 21.
*/

using System;
using static System.Console;
using System.Globalization;

class MultiplicationTable
{
    static void Main()
    {
        Write("Enter an integer: ");
        int number = int.Parse(ReadLine());

        for (int i = 1; i <= 10; i++)
        {
            WriteLine($"{i} x {number} = {i * number}");
        }
    }
}
